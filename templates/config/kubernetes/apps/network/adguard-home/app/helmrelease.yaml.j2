---
# yaml-language-server: $schema=https://raw.githubusercontent.com/fluxcd-community/flux2-schemas/main/helmrelease-helm-v2.json
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: &app adguard-home
spec:
  interval: 1h
  chartRef:
    kind: OCIRepository
    name: app-template
  install:
    remediation:
      retries: -1
  upgrade:
    cleanupOnFail: true
    remediation:
      retries: 3
  values:
    fullnameOverride: *app
    controllers:
      adguard-home:
        strategy: Recreate  # Important: AdGuard needs single instance for DHCP
        containers:
          app:
            image:
              repository: adguard/adguardhome
              tag: v0.107.52
              pullPolicy: IfNotPresent
            env:
              TZ: "Europe/Berlin"  # Adjust to your timezone
            args:
              - --port=3000
              - --host=0.0.0.0
              - --config=/opt/adguardhome/conf/AdGuardHome.yaml
              - --work-dir=/opt/adguardhome/work
              - --no-check-update
            probes:
              liveness:
                enabled: true
                custom: true
                spec:
                  httpGet:
                    path: /
                    port: 3000
                  initialDelaySeconds: 60
                  periodSeconds: 10
                  timeoutSeconds: 5
                  failureThreshold: 3
              readiness:
                enabled: true
                custom: true
                spec:
                  httpGet:
                    path: /
                    port: 3000
                  initialDelaySeconds: 30
                  periodSeconds: 5
                  timeoutSeconds: 5
            securityContext:
              allowPrivilegeEscalation: false
              readOnlyRootFilesystem: true
              runAsNonRoot: true
              runAsUser: 1000
            resources:
              requests:
                cpu: 100m
                memory: 128Mi
              limits:
                cpu: 300m
                memory: 256Mi

    defaultPodOptions:
      securityContext:
        runAsNonRoot: true
        runAsUser: 1000
        runAsGroup: 1000
        fsGroup: 1000

    service:
      app:
        controller: adguard-home
        type: LoadBalancer
        annotations:
          lbipam.cilium.io/ips: "#{ adguard_dns_addr }#"
        ports:
          http:
            port: 3000
            targetPort: 3000
            protocol: TCP
          dns-tcp:
            port: 5353
            targetPort: 5353
            protocol: TCP
          dns-udp:
            port: 5353
            targetPort: 5353
            protocol: UDP

    persistence:
      config:
        type: configMap
        name: adguard-home-config
        advancedMounts:
          adguard-home:
            app:
              - path: /opt/adguardhome/conf/AdGuardHome.yaml
                subPath: AdGuardHome.yaml
      data:
        type: persistentVolumeClaim
        existingClaim: adguard-home-data
        advancedMounts:
          adguard-home:
            app:
              - path: /opt/adguardhome/work

    route:
      app:
        hostnames: ["adguard.${SECRET_DOMAIN}"]
        parentRefs:
          - name: internal  # Use internal gateway for home network access
            namespace: kube-system
            sectionName: https
        rules:
          - backendRefs:
              - identifier: app
                port: 3000
