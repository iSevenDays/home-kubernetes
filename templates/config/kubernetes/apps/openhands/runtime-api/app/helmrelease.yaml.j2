---
# yaml-language-server: $schema=https://raw.githubusercontent.com/fluxcd-community/flux2-schemas/main/helmrelease-helm-v2.json
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: openhands-runtime-api
spec:
  interval: 15m
  timeout: 10m
  chart:
    spec:
      chart: runtime-api
      version: "0.1.5"
      sourceRef:
        kind: HelmRepository
        name: openhands
        namespace: flux-system
  install:
    remediation:
      retries: 3
  upgrade:
    cleanupOnFail: true
    remediation:
      retries: 3
  releaseName: openhands-runtime-api
  dependsOn:
    - name: openhands-postgresql
  values:
    migrationJob:
      enabled: true
      env:
        DB_HOST: "openhands-postgresql"
        DB_PORT: "5432"
        DB_NAME: "openhands"
        DB_USER: "postgres"
        DB_PASS:
          valueFrom:
            secretKeyRef:
              name: postgres-password
              key: password
    image:
      pullPolicy: Always
    ingress:
      enabled: false
    postgresql:
      enabled: false
    startupProbe:
      enabled: true
      initialDelaySeconds: 60
      periodSeconds: 15
      failureThreshold: 20
    podMonitor:
      enabled: false
