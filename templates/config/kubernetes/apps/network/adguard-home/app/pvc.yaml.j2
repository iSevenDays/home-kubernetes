---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: adguard-home-data
  namespace: network
  annotations:
    description: "PVC for AdGuard Home configuration and data"
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 5Gi
  storageClassName: longhorn
  selector:
    matchLabels:
      app: adguard-home